<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- From View Of Attendance Sheet Information -->

    <record id="view_attendance_sheet_form" model="ir.ui.view">
        <field name="name">attendance.sheet.form</field>
        <field name="model">attendance.sheet</field>
        <field name="arch" type="xml">
            <form string="Attendance Sheet">
                <group>
                    <field name="name"/>
                    <field name="standard_id" widget="selection" readonly="1"/>
                </group>
                <newline/>
                <group col="4">
                    <field name="year_id" widget="selection" colspan="2" readonly="1"/>
                    <field name="month_id" widget="selection" colspan="2" readonly="1"/>
                </group>
                <notebook colspan="4">
                    <page string="Attendances">
                        <field name="attendance_ids" nolabel="1" colspan="4">
                            <tree string="Monthly Attendance" editable="bottom" create="false" delete="false">
                                <field name="roll_no"/>
                                <field name="name"/>
                                <field name="one"/>
                                <field name="two"/>
                                <field name="three"/>
                                <field name="four"/>
                                <field name="five"/>
                                <field name="six"/>
                                <field name="seven"/>
                                <field name="eight"/>
                                <field name="nine"/>
                                <field name="ten"/>
                                <field name="one_1"/>
                                <field name="one_2"/>
                                <field name="one_3"/>
                                <field name="one_4"/>
                                <field name="one_5"/>
                                <field name="one_6"/>
                                <field name="one_7"/>
                                <field name="one_8"/>
                                <field name="one_9"/>
                                <field name="one_0"/>
                                <field name="two_1"/>
                                <field name="two_2"/>
                                <field name="two_3"/>
                                <field name="two_4"/>
                                <field name="two_5"/>
                                <field name="two_6"/>
                                <field name="two_7"/>
                                <field name="two_8"/>
                                <field name="two_9"/>
                                <field name="two_0"/>
                                <field name="three_1"/>
                                <field name="percentage" widget="progressbar"/>
                            </tree>
                            <form string="Monthly Attendance">
                                <group col="6" colspan="4">
                                    <field name="roll_no"/>
                                    <field name="name"/>
                                    <field name="one"/>
                                    <field name="two"/>
                                    <field name="three"/>
                                    <field name="four"/>
                                    <field name="five"/>
                                    <field name="six"/>
                                    <field name="seven"/>
                                    <field name="eight"/>
                                    <field name="nine"/>
                                    <field name="ten"/>
                                    <field name="one_1"/>
                                    <field name="one_2"/>
                                    <field name="one_3"/>
                                    <field name="one_4"/>
                                    <field name="one_5"/>
                                    <field name="one_6"/>
                                    <field name="one_7"/>
                                    <field name="one_8"/>
                                    <field name="one_9"/>
                                    <field name="one_0"/>
                                    <field name="two_1"/>
                                    <field name="two_2"/>
                                    <field name="two_3"/>
                                    <field name="two_4"/>
                                    <field name="two_5"/>
                                    <field name="two_6"/>
                                    <field name="two_7"/>
                                    <field name="two_8"/>
                                    <field name="two_9"/>
                                    <field name="two_0"/>
                                    <field name="three_1"/>
                                </group>
                            </form>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <!--  Tree View Of Attendance Sheet Information -->

    <record id="view_attendance_sheet_tree" model="ir.ui.view">
        <field name="name">attendance.sheet.tree</field>
        <field name="model">attendance.sheet</field>
        <field name="arch" type="xml">
            <tree string="Attendance Sheet" create="0">
                <field name="name"/>
                <field name="standard_id"/>
                <field name="month_id"/>
                <field name="year_id"/>
            </tree>
        </field>
    </record>

    <!-- Search View Of Attendance Sheets Information -->

    <record id="view_attendance_sheet_search" model="ir.ui.view">
        <field name="name">attendance.sheet.search</field>
        <field name="model">attendance.sheet</field>
        <field name="arch" type="xml">
            <search string="Monthly Attendance Sheet">
                <field name="standard_id"/>
                <group expand="1" string="Group By...">
                    <filter name="class" string="Class" help="By Class" context="{'group_by':'standard_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="action_attendance_sheet_form" model="ir.actions.act_window">
        <field name="name">Attendance Sheet</field>
        <field name="res_model">attendance.sheet</field>
        <field name="view_mode">form,tree</field>
    </record>

    <!-- Menu Item Of Attendance -->

    <menuitem id="menu_attendance" name="Attendance" parent="school.menu_ems" sequence="5"/>

</odoo>